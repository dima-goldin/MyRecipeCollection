<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addCategoryPopUp"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/accentColor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="הוספת קטגוריה חדשה"
        android:id="@+id/addCategoryPopUpTitle"
        android:layout_below="@+id/cancelPopUpButton"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="שם הקטגוריה"
        android:ems="10"
        android:id="@+id/editPopUpCategoryName"
        android:layout_below="@+id/addCategoryPopUpTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:editable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הוסף"
        android:id="@+id/popUpSubmitCategoryButton"
        android:layout_below="@+id/editPopUpCategoryName"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/cancelPopUpButton"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/editPopUpCategoryName" />
</RelativeLayout>