<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/framebackground"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView1"

        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="יצירת מתכון"
                android:id="@+id/CreateRecipeTitle"
                android:layout_gravity="right"
                android:textSize="35sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="18dp"
                android:layout_marginRight="18dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editRecipeName"
                android:hint="שם המתכון"
                android:layout_marginRight="18dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="מצרכים"
                android:id="@+id/textView2"
                android:layout_gravity="right"
                android:layout_marginRight="18dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:id="@+id/layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="שם המצרך"
                    android:textSize="15sp"
                    android:id="@+id/ingredientNameTitle"
                    android:layout_marginLeft="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="יחידות"
                    android:id="@+id/unitsTitle"
                    android:textSize="15sp"
                    android:layout_marginLeft="170dp"
                    android:layout_marginRight="170dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="15sp"
                    android:text="כמות"
                    android:id="@+id/amountTitle"
                    android:layout_marginRight="18dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/IngNameEdit"
                    android:layout_weight="1"
                    android:layout_marginLeft="18dp" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/unitSpinner"
                    android:focusable="true"
                    android:dropDownWidth="wrap_content"
                    android:spinnerMode="dropdown"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_marginRight="18dp"
                    android:layout_marginLeft="18dp" />

                <EditText

                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/amountEdit"
                    android:layout_weight="1"
                    android:layout_marginRight="18dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonStyleSmall"
                android:text="+"
                android:onClick="addIngToIngList"
                android:id="@+id/addIngredientFormButton"
                android:layout_marginRight="18dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:id="@+id/ingredientListForm"
                android:longClickable="true"
                android:nestedScrollingEnabled="true"
                android:layout_marginRight="18dp"
                android:layout_marginLeft="18dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="אופן הכנה"
                android:textSize="20sp"
                android:id="@+id/instructionsTitle"
                android:layout_marginRight="18dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editInstructions"
                android:layout_marginRight="18dp"
                android:layout_marginLeft="18dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שמור מתכון"
                android:layout_alignParentBottom="true"
                android:id="@+id/saveRecipeButton"
                android:textSize="20sp"
                android:onClick="createAndSaveNewRecipe"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="18dp" />

        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>